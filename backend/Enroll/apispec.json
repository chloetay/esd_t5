{
  "openapi": "3.0.0",
  "info": {
    "title": "Enroll Service API",
    "version": "1.0.0",
    "description": "Handles user enrollment flow with validation and wallet deduction."
  },
  "servers": [
    {
      "url": "http://localhost:5002"
    }
  ],
  "paths": {
    "/enroll": {
      "post": {
        "summary": "Enroll a user in a course",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userId": {
                    "type": "string"
                  },
                  "courseId": {
                    "type": "string"
                  },
                  "walletId": {
                    "type": "string"
                  },
                  "walletPassword": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Enrollment successful"
          },
          "400": {
            "description": "Missing fields or failed validation"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/profile": {
      "post": {
        "summary": "Get user's enrolled courses and wallet balance",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userId": {
                    "type": "string"
                  },
                  "walletId": {
                    "type": "string"
                  },
                  "walletPassword": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User profile data"
          },
          "400": {
            "description": "Missing required fields"
          },
          "500": {
            "description": "Fetching data failed"
          }
        }
      }
    }
  }
}